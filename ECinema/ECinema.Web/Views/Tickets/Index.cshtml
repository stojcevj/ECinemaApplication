@model List<ECinema.Domain.DomainModels.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}


<div class="container">
    <div class="row mt-3">
        <a class="btn btn-success" asp-action="Create">Insert New Ticket</a>
    </div>
    <div class="row mt-3">
        <form asp-action="Index" method="get">
            <div class="d-flex">
                <input type="datetime-local" name="datetofilter" class="mx-2 form-control"/>
                <input type="submit" name="submit" value="Filter" class="btn btn-primary" />
            </div>
        </form>
    </div>


@for (int i = 0; i < Model.Count; i++)
       {
           var item = Model[i];

           if(i % 3 == 0)
           {
     @:<div class="row">



           }

        <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height: 30rem;">
                <img class="card-img-top" src="@item.movieImage" style="height: 50%;" alt="Image for ticket!">

                <div class="card-body">
                    <h3 class="card-title">@item.movieName</h3>
                    <p class="card-text">@item.movieGenre</p>
                    <p class="card-text">@item.validDate</p>
                    <h6>Price: $@item.ticketPrice</h6>
                </div>

                <div class="card-footer p-0">
                    <a asp-controller="Tickets" asp-action="AddTicketToCart" asp-route-id="@item.Id" class="btn btn-info mx-1">Add to Card</a>
                    <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary mx-1">Edit</a>
                    <a asp-controller="Tickets" asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                </div>
            </div>
            </div>


           if(i % 3 == 2)
           {
             @:</div>



           }
}
</div>
