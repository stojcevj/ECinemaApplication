@using ECinema.Domain.DomainModels
@model List<Order>


@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<table class="table mt-3">
    <thead>
        <tr>
            <th>Order Id</th>
            <th>Export</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Order order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>
                    <a asp-action="CreateInvoice" asp-controller="Orders" asp-route-id="@order.Id" class="btn btn-primary">Generate Invoice</a>
                </td>
            </tr>
        }
    </tbody>
</table>